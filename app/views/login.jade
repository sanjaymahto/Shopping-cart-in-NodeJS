doctype html
html
  style.
    .button {
    padding: 15px 25px;
    font-size: 24px;
    text-align: center;
    cursor: pointer;
    outline: none;
    color: #fff;
    background-color: #4CAF50;
    border: none;
    border-radius: 15px;
    box-shadow: 0 9px #999;
    }
    .button:hover {background-color: #3e8e41}
    .button:active {
    background-color: #3e8e41;
    box-shadow: 0 5px #666;
    transform: translateY(4px);
    }
    form {
    border: 3px solid #f1f1f1;
    }
    input[type=text], input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    }
    button {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
    }
    button:hover {
    opacity: 0.8;
    }
    .cancelbtn {
    width: auto;
    padding: 10px 18px;
    background-color: #f44336;
    }
    .imgcontainer {
    text-align: center;
    margin: 24px 0 12px 0;
    }
    img.avatar {
    width: 40%;
    border-radius: 50%;
    }
    .container {
    padding: 16px;
    }
    span.psw {
    float: right;
    padding-top: 16px;
    }
    /* Change styles for span and cancel button on extra small screens */
    @media screen and (max-width: 300px) {
    span.psw {
    display: block;
    float: none;
    }
    .cancelbtn {
    width: 100%;
    }
    }
  body
    h2 Login Form
    form(action='http://localhost:3000/users/login', method='post')
      .container
        label
          b Email
        input(type='text', placeholder='Enter Email', name='email', required='')
        label
          b Password
        input(type='password', placeholder='Enter Password', name='password', required='')
        button(type='submit') Login
        input(type='checkbox', checked='false')
        |  Remember me!
      .container(style='background-color:#f1f1f1')
        span.psw(text-align='center')
          | Forgot Password?
          a(href='http://localhost:3000/users/lostpassword/screen') Click Here!
        br
        button.button
          a(href='http://localhost:3000/users/signup/screen') Signup
