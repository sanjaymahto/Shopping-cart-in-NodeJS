doctype html
html(lang='en')
  head
    title Profile
    style.
      body
      {
      font-family: 'Open Sans', sans-serif;
      }
      .button {
      background-color: #4CAF50; /* Green */
      border: none;
      color: white;
      padding: 15px 32px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      -webkit-transition-duration: 0.4s; /* Safari */
      transition-duration: 0.4s;
      }
      .button2:hover {
      box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
      }
      .fb-profile img.fb-image-lg{
      z-index: 0;
      width: 100%;
      margin-bottom: 10px;
      }
      .fb-image-profile
      {
      margin: -90px 10px 0px 50px;
      z-index: 9;
      width: 20%;
      border-radius: 50%;
      }
      @media (max-width:768px)
      {
      .fb-profile-text>h1{
      font-weight: 700;
      font-size:16px;
      }
      .fb-image-profile
      {
      margin: -45px 10px 0px 25px;
      z-index: 9;
      width: 20%;
      }
      }
  body
    #container.col
      link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
      .container
        .fb-profile
          img.fb-image-lg(align='left', src='http://www.ism-ukraine.com/media/557212/ism-ecompany-rotterdam.jpg', alt='Profile image example')
          img.fb-image-profile.thumbnail(align='left', src='http://singlegadget.com/wp-content/uploads/2016/05/generic-profile.jpg', alt='Profile image example')
          .fb-profile-text
            h1 Username : #{user.userName}
            h2 Name : #{user.firstName+" "+user.lastName}
            h2 Email : #{user.email}
            h2 Mobile Number : #{user.mobileNumber}
            button.button.button2
              a(href='http://localhost:3000/users/logout') Logout
            button.button.button2
              a(href='http://localhost:3000/users/products') Products
            button.button.button2
              a(href='http://localhost:3000/users/Ecommercecart') Cart
        // /container
